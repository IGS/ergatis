<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>bwa Iterator workflow</name>
        <!--Processing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>Convert sra file to fastq</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/sra2fastq</executable>
            <param>
            	<key>stdout</key>
            	<value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.sra2fastq_exec.stdout</value>
            </param>
            <param>
            	<key>stderr</key>
            	<value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.sra2fastq_exec.stderr</value>
            </param>
            <param>
            	<key>--sratoolkit</key>
            	<value>$;SRA_TOOLS_BIN$;</value>
			</param>
            <param>
            	<key>--input_file</key>
            	<value>$;I_FILE_BASE$;</value>
            </param>
            <param>
            	<key>--output_dir</key>
            	<value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/</value>
            </param>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>lgt_build_index</name>
			<state>incomplete</state>
			<executable>$;BIN_DIR$;/lgt_build_index</executable>
			<param>
				<key>--reference</key>
				<value>$;I_FILE_PATH$;</value>
			</param>
			<param>
				<key>--algo</key>
				<value>$;INDEX_ALGO$;</value>
			</param>
			<param>
				<key>--output_dir</key>
				<value>$;OUTPUT_DIRECTORY$;</value>
			</param>
            <param>
                <key>stderr</key>
                <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.err1</value>
            </param>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>BWA Execution</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/lgt_bwa</executable>
            <param>
            <key>--input_dir</key>
            <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/</value>
            </param>
            <param>
            <key>--reference</key>
            <value>$;I_FILE_BASE$;</value>
            </param>
            <param>
            <key>--output_dir</key>
            <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/</value>
            </param>
            <param>
            <key>--paired</key>
            <value>$;PAIRED$;</value>
            </param>
            <param>
            <key>--misMsc</key>
            <value>$;MISMATCH_PENALTY$;</value>
            </param>
            <param>
            <key>--maxGapO</key>
            <value>$;MAX_GAP_OPENS$;</value>
            </param>
            <param>
            <key>--maxGapE</key>
            <value>$;MAX_GAP_EXTNS$;</value>
            </param>
            <param>
            <key>--gapOsc</key>
            <value>$;GAP_OPEN_PENALTY$;</value>
            </param>
            <param>
            <key>--gapEsc</key>
            <value>$;GAP_EXTN_PENALTY$;</value>
            </param>
            <param>
            <key>--nThrds</key>
            <value>$;MAX_THREADS$;</value>
            </param>
            <param>
            <key>--num_aligns</key>
            <value>$;MAX_ALIGN$;</value>
            </param>
            <param>
            <key>--bwa_path</key>
            <value>$;BWA_EXEC$;</value>
            </param>
            <param>
            <key>--samtools_path</key>
            <value>$;SAMTOOLS_EXEC$;</value>
            </param>
            <param>
            <key>--bwa_params</key>
            <value>$;BWA_ARGS$;</value>
            </param>
            <param>
            <key>--samtools_params</key>
            <value>$;SAM_VIEW_ARGS$;</value>
            </param>
            <param>
            <key>--keep_sam</key>
            <value>$;KEEP_SAM$;</value>
            </param>
            <param>
            <key>stdout</key>
            <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.bwa_align_exec.ref1.stdout</value>
            </param>
            <param>
            <key>stderr</key>
            <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.bwa_align_exec.ref1.stderr</value>
            </param>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>BWA Execution</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/lgt_filter_reads</executable>
            <param>
            <key>--output_dir</key>
            <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/</value>
            </param>
            <param>
            <key>--samtools_path</key>
            <value>$;SAMTOOLS_EXEC$;</value>
            </param>
            <param>
            <key>--samtools_params</key>
            <value>$;SAM_SORT_ARGS$;</value>
            </param>
            <param>
            <key>stdout</key>
            <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.bwa_align_exec.ref1.stdout</value>
            </param>
            <param>
            <key>stderr</key>
            <value>$;OUTPUT_DIRECTORY$;/$;ITERATOR_NAME$;/g$;GROUP_NUMBER$;/$;I_FILE_BASE$;.bwa_align_exec.ref1.stderr</value>
            </param>
        </command>
    </commandSet>
</commandSetRoot>
