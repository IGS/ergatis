<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>blast2lca workflow</name>
        <!--Preprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>Get lowest common ancestor from blast hits</name>
            <executable>$;BIN_DIR$;/blast2lca</executable>
            <param>
                <key>--input_file</key>
                <value>$;INPUT_FILE$;</value>
            </param>
            <param>
                <key>--tax_id_file</key>
                <value>$;GI2TAX$;</value>
            </param>
            <param>
                <key>--names_file</key>
                <value>$;NCBITAX$;/names.dmp$;</value>
            </param>
            <param>
                <key>--nodes_file</key>
                <value>$;NCBITAX$;/nodes.dmp$;</value>
            </param>
            <param>
                <key>--output_file</key>
                <value>$;OUTPUT_DIRECTORY$;/blast2lca.out</value>
            </param>
            <param>
                <key>--tmp_dir</key>
                <value>$;TMP_DIR$;</value>
            </param>
            <param>
                <key>--db</key>
                <value>$;TAXONDB$;</value>
            </param>
            <param>
                <key>--host</key>
                <value>$;HOST$;</value>
            </param>
            <param>
                <key>--collection</key>
                <value>$;TAXONCOLL$;</value>
            </param>
            <param>
                <key>--evalue_cutoff</key>
                <value>$;EVALUE_CUTOFF$;</value>
			</param>
			<param>
				<key>--best_hits_only</key>
				<value>$;BEST_HITS_ONLY$;</value>
			</param>
            <param>
                <key>stdout</key>
                <value>$;OUTPUT_DIRECTORY$;/lgt_sam2fasta.stdout</value>
            </param>
            <param>
                <key>stderr</key>
                <value>$;OUTPUT_DIRECTORY$;/lgt_sam2fasta.stderr</value>
            </param>
        </command>
    </commandSet>
</commandSetRoot>
