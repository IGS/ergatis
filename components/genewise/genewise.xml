<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>genewise workflow</name>
        <!--Preprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>prepare for genewise</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/prepare_for_genewise_best_loc</executable>
            <param>  
                <key>--Database</key>
                <value>$;PROJECT$;</value>
            </param>
            <param>  
                <key>--username</key>
                <value>$;USERNAME$;</value>
            </param>
            <param>  
                <key>--password</key>
                <value>$;PASSWORD$;</value>
            </param>
            <param>  
                <key>--search_db</key>
                <value>$;SEARCH_DB$;</value>
            </param>
            <param>  
                <key>--work_dir</key>
                <value>$;WORK_DIR$;</value>
            </param>
            <param>  
                <key>--asmbl_id</key>
                <value>'$;ASMBL_ID$;'</value>
            </param>
            <param>  
                <key>--asmbl_file</key>
                <value>'$;ASMBL_LIST_FILE$;'</value>
            </param>
            <param>  
                <key>--PADDING_LENGTH</key>
                <value>$;PADDING_LENGTH$;</value>
            </param>
            <param>  
                <key>--MIN_CHAIN_SCORE</key>
                <value>$;MIN_CHAIN_SCORE$;</value>
            </param>
            <param>  
                <key>--file_list</key>
                <value>$;INPUT_FILE_LIST$;</value>
            </param>
            <param>  
                <key>--num_tiers</key>
                <value>$;NUM_TIERS$;</value>
            </param>
            <param>  
                <key>--MIN_PERCENT_CHAIN_ALIGN</key>
                <value>$;MIN_PERCENT_ALIGN_CHAIN$;</value>
            </param>
            <param>  
                <key>stdout</key>
                <value>$;TMP_DIR$;/prepare_for_genewise_best_loc.stdout</value>
            </param>
            <param>  
                <key>stderr</key>
                <value>$;TMP_DIR$;/prepare_for_genewise_best_loc.stderr</value>
            </param>
        </command>
        <!--Processing-->
        <!--Iterator-->
        <INCLUDE file="$;DOCS_DIR$;/file_iterator_template.xml" keys="$;ITERATOR_NAME$;=ITERATOR1,$;ITERATOR_XML$;=ITERATOR1_XML">
        <!--Postprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create raw list</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/create_list_file</executable>
            <param>  
                <key>--directory</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>  
                <key>--regex</key>
                <value>".*\.raw"</value>
            </param>
            <param>  
                <key>--output_list</key>
                <value>$;RAW_OUTPUT_LIST$;</value>
            </param>
        </command>
    </commandSet>
</commandSetRoot>
