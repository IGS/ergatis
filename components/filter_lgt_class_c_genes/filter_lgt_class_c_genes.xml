<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
	<commandSet type="serial">
		<state>incomplete</state>
		<name>filter_lgt_class_c_genes workflow</name>
		<!--Processing-->
		<command>
			<type>RunUnixCommand</type>
			<name>create output directory</name>
			<state>incomplete</state>
			<executable>mkdir</executable>
			<arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
		</command>
		<command>
			<type>RunUnixCommand</type>
			<name>get best blast hit by bitscore - "only"</name>
			<state>incomplete</state>
			<executable>sort</executable>
			<arg>-k1 -k12nr -k11n $;ONLY_FILE$; | sort -u -k1 --merge</arg>
			<param>
				<key>stdout</key>
				<value>$;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.only.best.m8</value>
			</param>
		</command>
		<command>
			<type>RunUnixCommand</type>
			<name>get best blast hit by bitscore - "exclude"</name>
			<state>incomplete</state>
			<executable>sort</executable>
			<arg>-k1 -k12nr -k11n $;EXCLUDE_FILE$; | sort -u -k1 --merge</arg>
			<param>
				<key>stdout</key>
				<value>$;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.exclude.best.m8</value>
			</param>
		</command>
		<command>
			<type>RunUnixCommand</type>
			<name>calculate h-score and classify c-class genes</name>
			<state>incomplete</state>
			<executable>$;BIN_DIR$;/classify_class_c_genes</executable>
			<param>
				<key>--only_file</key>
				<value>$;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.only.best.m8</value>
			</param>
			<param>
				<key>--exclude_file</key>
				<value>$;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.exclude.best.m8</value>
			</param>
			<param>
				<key>--bitscore_thresh</key>
				<value>$;BITSCORE_THRESH$;</value>
			</param>
			<param>
				<key>--hscore_thresh</key>
				<value>$;HSCORE_THRESH$;</value>
			</param>
			<param>
				<key>--output_dir</key>
				<value>$;OUTPUT_DIRECTORY$;</value>
			</param>
			<param>
				<key>stdout</key>
				<value>$;OUTPUT_DIRECTORY$;/classify_class_c_genes.stdout</value>
			</param>
			<param>
				<key>stderr</key>
				<value>$;OUTPUT_DIRECTORY$;/classify_class_c_genes.stderr</value>
			</param>
		</command>
        <command>
            <type>RunUnixCommand</type>
            <name>create class-c m8 list</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/create_list_file</executable>
            <param>  
                <key>--directory</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>  
                <key>--regex</key>
                <value>"class_c\.tsv"</value>
            </param>
            <param>  
                <key>--output_list</key>
                <value>$;OUTPUT_LIST$;</value>
            </param>
        </command>
	</commandSet>
</commandSetRoot>
