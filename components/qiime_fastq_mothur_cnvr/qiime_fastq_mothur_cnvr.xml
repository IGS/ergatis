<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>QIIME-fastq to MOTHUR conversion workflow</name>
        <!--Preprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>preprocess input data for split libraries</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/prep_MiSeq_for_qiime.sh</executable>
            <arg>-m $;MAPPING_FILE$; -f $;INPUT_FILE_LIST$; -o $;OUTPUT_DIRECTORY$; -b $;BIN_DIR$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>split libraries for QIIME - FastQ</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/split_libraries_fastq</executable>
			<arg>-m $;OUTPUT_DIRECTORY$;/mapping.corrected.txt -i $;OUTPUT_DIRECTORY$;/R1N_PE.fq,$;OUTPUT_DIRECTORY$;/R3N_PE.fq -o $;OUTPUT_DIRECTORY$; -b $;OUTPUT_DIRECTORY/barcode.fq --barcode_type $;BARCODE_TYPE$; $;OTHEROPTS$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create input files for mothur components</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/qiime_to_mothur_meta.pl</executable>
            <arg>-f $;OUTPUT_DIRECTORY$;/splitlibs/seqs.fq -m  $;OUTPUT_DIRECTORY$;/mapping.corrected.txt -p $;MOTHUR_PREFIX$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create results list</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/create_list_file</executable>
            <param>
                <key>--directory</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>
                <key>--regex</key>
                <value>".*_PE\.fq"</value>
            </param>
            <param>
                <key>--output_list</key>
                <value>$;RESULTS_OUTPUT_LIST$;</value>
            </param>
        </command>
    </commandSet>
</commandSetRoot>
