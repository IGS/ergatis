<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>update_ec_numbers workflow</name>
        <!--Preprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>             
        <!--Processing-->
        <!--Iterator-->
        <command>
            <type>RunUnixCommand</type>
            <name>update ec numbers</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/update_ec_numbers</executable>
            <param>  
                <key>--input_file</key>
                <value>$;INPUT_FILE$;</value>
            </param>
            <param>  
                <key>--output_dir</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>            
            <param>
                 <key>stdout</key>
                 <value>$;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.stdout</value>
            </param>            
            <param>  
                <key>stderr</key>
                <value>$;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.stderr</value>
            </param>
        </command>   
        <!--Postprocessing-->         
    </commandSet>
</commandSetRoot>
