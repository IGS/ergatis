<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>coords_to_glimmer3 workflow</name>
        <!--Preprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>add strand to coords file</name>
            <state>incomplete</state>
            <executable>sed</executable>
            <arg>-e 's/$/\t\+/' $;COORDS_FILE$;</arg>
            <param>
                <key>stdout</key>
                <value>$;OUTPUT_DIRECTORY$;/glimmer3.step1.txt</value>
            </param>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>add strand to coords file</name>
            <state>incomplete</state>
            <executable>sed</executable>
            <arg>-e 's/^/>/' $;OUTPUT_DIRECTORY$;/glimmer3.step1.txt</arg>
            <param>
                <key>stdout</key>
                <value>$;OUTPUT_DIRECTORY$;/glimmer3.predict</value>
            </param>
        </command>
        <!--Processing-->
        <!--Iterator-->
        <INCLUDE file="$;DOCS_DIR$;/file_iterator_template.xml" keys="$;ITERATOR_NAME$;=ITERATOR1,$;ITERATOR_XML$;=ITERATOR1_XML">
        <!--Postprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create bsml list</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/create_list_file</executable>
            <param>  
                <key>--directory</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>  
                <key>--regex</key>
                <value>".*\.bsml"</value>
            </param>
            <param>  
                <key>--output_list</key>
                <value>$;OUTPUT_LIST$;</value>
            </param>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create fasta file list</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/create_list_file</executable>
            <param>
                <key>--directory</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>
                <key>--regex</key>
                <value>".*(\.fsa|\.fasta)$"</value>
            </param>					
            <param>
                <key>--output_list</key>
                <value>$;FASTA_LIST$;</value>
            </param>		    
        </command>
    </commandSet>
</commandSetRoot>
