<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
        <commandSet type="serial">
                <state>incomplete</state>
                <name>insert pmarks in scaffolds workflow</name>
                <!--Preprocessing--> 
                <command>
                        <type>RunUnixCommand</type>
                        <name>create output directory</name>
                        <state>incomplete</state>
                        <executable>mkdir</executable>
                        <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
                </command>
                <command>
                        <type>RunUnixCommand</type>
                        <name>create temp directory</name>
                        <state>incomplete</state>
                        <executable>mkdir</executable>
                        <arg>-p -m 777 $;TMP_DIR$;</arg>
                </command>
                <command>
                        <type>RunDistributedCommand</type>
                        <name>insert_pmarks_in_scaffolds</name>
                        <state>incomplete</state>
                        <executable>$;BIN_DIR$;/insert_pmarks_in_scaffolds</executable>
                        <param>
                                <key>--input_list</key>
                                <value>$;INPUT_FILE_LIST$;</value>
                        </param>
                        <param>
                                <key>--output_dir</key>
                                <value>$;OUTPUT_DIRECTORY$;</value>
                        </param>
                        <param>
                                <key>--database</key>
                                <value>$;DATABASE$;</value>
                        </param>
                        <param>
                                <key>--host</key>
                                <value>$;SERVER$;</value>
                        </param>
                        <param>
                                <key>--user</key>
                                <value>$;USERNAMW$;</value>
                        </param>
                        <param>
                                <key>--pass</key>
                                <value>$;PASSWORD$;</value>
                        </param>                        
                        <param>
                                <key>--log</key>
                                <value>$;TMP_DIR$;/insert_pmarks_in_scaffolds.log</value>
                        </param>
                        <param>
                                <key>--debug</key>
                                <value>4</value>
                        </param>
                </command>
                <command>
                        <type>RunUnixCommand</type>
                        <name>insert pmarks in scaffolds file list</name>
                        <state>incomplete</state>
                        <executable>$;BIN_DIR$;/create_list_file</executable>
                        <param>
                                <key>--directory</key>
                                <value>$;OUTPUT_DIRECTORY$;</value>
                        </param>
                        <param>
                                <key>--regex</key>
                                <value>".*\.pmark\.multi\.fasta"</value>
                        </param>
                        <param>
                                <key>--output_list</key>
                                <value>$;OUTPUT_LIST$;</value>
                        </param>
                </command>
        </commandSet>
</commandSetRoot>
                               
