<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>orthomcl prep workflow</name>
        <!--Preprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;</arg>
        </command>
        <!--Processing-->
        <command>
            <type>RunUnixCommand</type>
            <name>adjust fasta to orthoMCL standards</name>
            <state>incomplete</state>
			<executable>$;BIN_DIR$;/orthomcl_adjust_fasta</executable>
            <param>  
                <key>--orthomcl_bin</key>
                <value>$;ORTHOMCL_BIN$;</value>
            </param>
            <param>  
                <key>--mapping_file</key>
                <value>$;MAPPING_FILE$;</value>
            </param>
            <param>  
                <key>--unique_id_field</key>
                <value>1</value>
            </param>
            <param>  
                <key>--input_file</key>
                <value>$;INPUT_FILE$;</value>
            </param>
            <param>  
                <key>--input_list</key>
                <value>$;INPUT_FILE_LIST$;</value>
            </param>
            <param>  
                <key>--output_dir</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>  
                <key>stdout</key>
                <value>$;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.adjustFasta.stdout</value>
            </param>
            <param>  
                <key>stderr</key>
                <value>$;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.adjustFasta.stderr</value>
            </param>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>filter out poor proteins</name>
            <state>incomplete</state>
			<executable>cd $;OUTPUT_DIRECTORY$; ; $;ORTHOMCL_BIN$;/orthomclFilterFasta</executable>
			<arg>$;OUTPUT_DIRECTORY$;/compliantFasta $;MIN_LENGTH$; $;MAX_PERCENT_STOP$;</arg>
            <param>  
                <key>stderr</key>
                <value>$;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.filterFasta.stderr</value>
            </param>
        </command>
    </commandSet>
</commandSetRoot>
