<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
        <commandSet type="serial">
                <state>incomplete</state>
                <name>validate genbank workflow</name>
                <!--Preprocessing--> 
                <command>
                        <type>RunUnixCommand</type>
                        <name>create output directory</name>
                        <state>incomplete</state>
                        <executable>mkdir</executable>
                        <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
                </command>
                <command>
                        <type>RunUnixCommand</type>
                        <name>validate genbank</name>
                        <state>incomplete</state>
                        <executable>$;BIN_DIR$;/validate_genbank</executable>
                        <param>
                                <key>--genbank_list</key>
                                <value>$;INPUT_FILE_LIST$;</value>
                        </param>
                        <param>
                                <key>--output_path</key>
                                <value>$;OUTPUT_DIRECTORY$;</value>
                        </param>
                        <param>
                                <key>stdout</key>
                                <value>$;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.stdout</value>
                        </param>
                        <param>
                                <key>stderr</key>
                                <value>$;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.stderr</value>
                        </param>

                </command>
                <command>
                        <type>RunUnixCommand</type>
                        <name>create genbank list</name>
                        <state>incomplete</state>
                        <executable>$;BIN_DIR$;/create_list_file</executable>
                        <param>
                                <key>-directory</key>
                                <value>$;OUTPUT_DIRECTORY$;</value>
                        </param>
                        <param>
                                <key>--regex</key>
                                <value>".*\/validate\/.*\.gbk"</value>
                        </param>           
                        <param>
                                <key>--output_list</key>
                                <value>$;OUTPUT_LIST$;</value>
                        </param>
                </command>
        </commandSet>
</commandSetRoot>
                               
