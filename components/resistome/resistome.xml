<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>get_read_length workflow</name>
        <!--Preprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;</arg>
        </command>
        <!--Processing-->
        <!--Iterator-->
	<!--we don't need the iterator for this component-->
        <!--Postprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>fetch read length</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/get_read_length</executable>
	    <param>
                <key>--input_file</key>
                <value>$;INPUT_FILE$;</value>
            </param>
	    <param>
		<key>--input_file_list</key>
		<value>$;INPUT_FILE_LIST$;</value>
	    </param>
            <param>  
                <key>--output_file</key>
                <value>$;READ_LENGTH_FILE$;</value>
            </param>
        </command>
	<command>
            <type>RunUnixCommand</type>
            <name>filter blastx output</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/filter_blastx_output</executable>
            <param>
                <key>--read_length_file</key>
                <value>$;READ_LENGTH_FILE$;</value>
            </param>
	    <param>
		<key>--blastx_file_list</key>
		<value>$;BLASTX_FILE_LIST$;</value>
	    </param>
            <param>
                <key>--output_file</key>
                <value>$;FILTERED_BLASTX_FILE$;</value>
            </param>
	    <param>
		<key>--identity_percentage</key>
		<value>$;IDENTITY_PERCENTAGE$;</value>
	    </param>
	    <param>
		<key>--read_length_coverage</key>
		<value>$;READ_LENGTH_COVERAGE$;</value>
	    </param>
        </command>
	<command>
            <type>RunUnixCommand</type>
            <name>get resistome table</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/get_resistome_table</executable>
	    <param>
                <key>--input_file</key>
                <value>$;FILTERED_BLASTX_FILE$;</value>
            </param>
            <param>
                <key>--output_file</key>
                <value>$;RESISTOME_TABLE$;</value>
            </param>
        </command>
    </commandSet>
</commandSetRoot>
