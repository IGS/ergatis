<?xml version="1.0" encoding="UTF-8"?>

<commandSetRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation='commandSet.xsd'>
    <commandSet type="serial">
        <state>incomplete</state>
        <name>sam2lca workflow</name>
        <!--Preprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create output directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;OUTPUT_DIRECTORY$;</arg>
        </command>
        <command>
            <type>RunUnixCommand</type>
            <name>create temp directory</name>
            <state>incomplete</state>
            <executable>mkdir</executable>
            <arg>-p -m 777 $;TMP_DIR$;</arg>
		</command>
        <!--Processing-->
        <command>
            <type>RunUnixCommand</type>
            <name>merge BAM files</name>
            <state>incomplete</state>
            <executable>$;SAMTOOLS_BIN$;</executable>
			<arg>merge -b $;INPUT_FILE_LIST$; -n $;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.bam</arg>
			<param>
				<key>stderr</key>
				<value>$;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.stdout</value>
			</param>
			<param>
				<key>stderr</key>
				<value>$;OUTPUT_DIRECTORY$;/$;COMPONENT_NAME$;.stderr</value>
			</param>
		</command>
		<!--Postprocessing-->
        <command>
            <type>RunUnixCommand</type>
            <name>create LCA output list</name>
            <state>incomplete</state>
            <executable>$;BIN_DIR$;/create_list_file</executable>
            <param>
                <key>--directory</key>
                <value>$;OUTPUT_DIRECTORY$;</value>
            </param>
            <param>
                <key>--regex</key>
                <value>".*\.bam"</value>
            </param>
            <param>
                <key>--output_list</key>
                <value>$;OUTPUT_LIST$;</value>
            </param>
        </command>			
	</commandSet>
</commandSetRoot>
