          <configMapId>set_workflowdocs_permissions</configMapId>
        </command>
<!--Preprocessing-->
<!--Processing-->
    	<command>
          <type>RunUnixCommand</type>
          <name>xdformat</name>
          <configMapId>xdformat</configMapId>
        </command>
<!--Postprocessing-->
<!--Checksum creation-->
